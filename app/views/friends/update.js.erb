<% if @friend.errors.any? %>
  $("li#friend_<%= @friend.id%>").hide();
  $('#new_link').hide().after('<%= j render("form") %>');
<% else %>
  $('#edit_friend_<%= @friend.id%>').hide();
  $('#new_link').show();
  $("li#friend_<%= @friend.id%>").html('');
  $("li#friend_<%= @friend.id%>").html("<%= j(render(partial: @friend))%>");
  $("li#friend_<%= @friend.id%>").show();
  $("#flash-message").css('display', 'block');
  $("#flash-message").html("<%= escape_javascript(render partial: 'shared/flash_messages') %>").fadeOut(2000);
<% end %>
